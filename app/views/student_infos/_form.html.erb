<%= simple_form_for @student_info, html: {class: 'form-horizontal'} do |f| %>
  <legend>家教信息填写</legend>
  <%= f.input :username  %>
  <%= f.input :gender, collection: ["男","女"], as: :radio_buttons %>
  <%= f.input :phone %>
  <%= f.input :area, collection: ["荔湾", "越秀", "天河","海珠","白云", "黄埔", "番禺", "花都", "增城", "从化", "其它"] %>
  <%= f.input :address %>
  <%= f.input :grade, collection: ["幼儿","一年级","二年级","三年级","四年级","五年级","六年级","初一","初二","初三","高一","高二","高三"] %>
  <%= f.input :fee, collection: ["面议","10元/小时", "20元/小时","30-50元/小时","50-100元/小时","100-200元/小时","200-300元/小时"] %>
  <%= f.input :time %>
  <%= f.input :demand, input_html: {rows: 6, class: "span5"} %>
  <%= f.input :status, inline_label: "状态", label: false %>
  <div class="span2 offset6">
  <%= f.button :submit, class: 'btn btn-info'%>
  </div>
<% end %>
